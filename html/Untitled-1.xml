<svg xmlns="http://www.w3.org/2000/svg" width="800" height="400" viewBox="0 0 800 400" style="background-color: #001e3c;">
    <!-- Barre verticale avec émotions -->
    <g transform="translate(50, 50)">
        <!-- Slider -->
        <rect x="0" y="0" width="20" height="300" fill="#ccc" rx="10" />
        <rect x="5" y="120" width="10" height="40" fill="#fff" rx="5" />
        
        <!-- Émotions -->
        <circle cx="40" cy="20" r="20" fill="#2ecc71" />
        <circle cx="40" cy="80" r="20" fill="#27ae60" />
        <circle cx="40" cy="140" r="20" fill="#f1c40f" />
        <circle cx="40" cy="200" r="20" fill="#e67e22" />
        <circle cx="40" cy="260" r="20" fill="#e74c3c" />
        <circle cx="40" cy="320" r="20" fill="#c0392b" />
    </g>

    <!-- Jauge semi-circulaire -->
    <g transform="translate(200, 200)">
        <!-- Arc -->
        <path d="M-150 0 A150 150 0 0 1 150 0" fill="none" stroke="#ccc" stroke-width="15" />
        <path d="M-150 0 A150 150 0 0 1 50 -100" fill="none" stroke="url(#gradient)" stroke-width="15" />

        <!-- Curseur -->
        <circle cx="50" cy="-100" r="10" fill="#fff" />
        
        <!-- Graduation -->
        <text x="-150" y="20" font-size="16" fill="#fff">01</text>
        <text x="-100" y="-80" font-size="16" fill="#fff">02</text>
        <text x="0" y="-140" font-size="16" fill="#fff">03</text>
        <text x="100" y="-80" font-size="16" fill="#fff">04</text>
        <text x="150" y="20" font-size="16" fill="#fff">05</text>
    </g>

    <!-- Barres de progression horizontales -->
    <g transform="translate(500, 50)">
        <text x="0" y="20" fill="#fff" font-size="16">EXCELLENT</text>
        <rect x="0" y="30" width="150" height="20" fill="#2ecc71" rx="10" />
        <rect x="150" y="30" width="50" height="20" fill="#ccc" rx="10" />
        
        <text x="0" y="70" fill="#fff" font-size="16">GOOD</text>
        <rect x="0" y="80" width="120" height="20" fill="#27ae60" rx="10" />
        <rect x="120" y="80" width="80" height="20" fill="#ccc" rx="10" />

        <text x="0" y="120" fill="#fff" font-size="16">FAIR</text>
        <rect x="0" y="130" width="100" height="20" fill="#f1c40f" rx="10" />
        <rect x="100" y="130" width="100" height="20" fill="#ccc" rx="10" />

        <text x="0" y="170" fill="#fff" font-size="16">BAD</text>
        <rect x="0" y="180" width="80" height="20" fill="#e67e22" rx="10" />
        <rect x="80" y="180" width="120" height="20" fill="#ccc" rx="10" />

        <text x="0" y="220" fill="#fff" font-size="16">POOR</text>
        <rect x="0" y="230" width="50" height="20" fill="#e74c3c" rx="10" />
        <rect x="50" y="230" width="150" height="20" fill="#ccc" rx="10" />
    </g>

    <!-- Dégradé pour la jauge -->
    <defs>
        <linearGradient id="gradient" x1="0%" y1="100%" x2="100%" y2="0%">
            <stop offset="0%" style="stop-color:#2ecc71;stop-opacity:1" />
            <stop offset="50%" style="stop-color:#f1c40f;stop-opacity:1" />
            <stop offset="100%" style="stop-color:#e74c3c;stop-opacity:1" />
        </linearGradient>
    </defs>
</svg>
